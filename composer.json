{
    "name": "monomelodies/monolyth",
    "description": "Object oriented PHP5 MVC unframework",
    "keywords": ["PHP","OO","MVC","framework","unframework"],
    "license": "MIT",
    "authors": [
        {
            "name": "Marijn Ophorst",
            "email": "marijn@monomelodies.nl"
        }
    ],
    "require": {
        "php": ">=5.4",
        "twig/twig": ">=1.0.0",
        "monomelodies/disclosure": ">=1.0.0",
        "monomelodies/improse": ">=0.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4"
    },
    "suggest": {
        "monomelodies/cesession": "Alternative PHP session handler",
        "monomelodies/dabble": "Database abstraction layer",
        "monomelodies/emily": "Swift and Twig-based HTML mailer",
        "monomelodies/formulaic": "Easy form handling",
        "monomelodies/gentry": "Generate skeleton unit tests",
        "monomelodies/metaculous": "Metatag helpers",
        "monomelodies/monki": "API generation bootstrapper",
        "monomelodies/mural": "Multiple resource autoloader for several apps in one repository",
        "monomelodies/ornament": "ORM toolkit",
        "monomelodies/dormant": "Dabble adapter for Ornament",
        "monomelodies/reroute": "Flexible object oriented router",
        "phpunit/dbunit": "Test your database classes too"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    }
}
